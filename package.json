{
  "name": "pokedex",
  "version": "3.0.0",
  "private": true,
  "author": "Emma Alvado",
  "dependencies": {
    "@fortawesome/fontawesome": "1.1.8",
    "@fortawesome/fontawesome-free-regular": "5.0.13",
    "@fortawesome/fontawesome-free-solid": "5.0.13",
    "bootstrap": "4.3.1",
    "classnames": "2.2.6",
    "flow-bin": "0.98.1",
    "hardtack": "4.1.0",
    "memoize-one":"5.0.4",
    "react": "16.8.6",
    "react-bootstrap": "1.0.0-beta.8",
    "react-dom": "16.8.6",
    "react-redux": "6.0.0",
    "react-router-redux": "4.0.8",
    "react-router-dom": "5.0.O",
    "react-router": ">=4.1.1",
    "redux": "4.0.1",
    "redux-form": "8.2.0",
    "redux-api-middleware": "3.0.1",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "husky": "1.3.1",
    "lint-staged": "8.1.7",
    "prettier": "1.15.3",
    "react-scripts": "3.0.1",
    "redux-logger": "3.0.6",
    "eslint-plugin-react": "7.13.0",
    "axios": "0.18.0",
    "node-sass": "4.12.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "build-css": "node-sass --include-path scss src/style/ui.scss src/style/main.css",
    "lint": "eslint -f codeframe --ext js,jsx src",
    "flow": "flow",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src}/**/*.{js,jsx}": [
      "eslint --fix -f codeframe --ext js,jsx",
      "git add"
    ],
    "packages/**/*.{md,json,scss}": [
      "./node_modules/prettier/bin-prettier.js --write \"./packages/**/*.scss\"",
      "git add"
    ],
    "concurrent": false,
    "subTaskConcurrency": 1
  }
}
